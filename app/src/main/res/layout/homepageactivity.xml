<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context=".Controller.HomePageActivityController"
>

    <TextView
            android:layout_height="36dp"
            android:layout_width="365dp"
            app:layout_constraintHorizontal_bias="0.428"
            android:textColor="#002054"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:id="@+id/textView"
            android:text="Hello, and Welcome to SecurePoll!"/>

    <Button
            android:layout_height="66dp"
            android:layout_width="129dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:id="@+id/LogButton"
            android:text="Login" style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintVertical_bias="0.639"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="touchLogin"/>

    <Button
            android:layout_height="68dp"
            android:layout_width="122dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:id="@+id/regButton"
            android:text="Register" style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginBottom="8dp"
            android:onClick="touchRegister"
            app:layout_constraintBottom_toTopOf="@+id/LogButton"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

</android.support.constraint.ConstraintLayout>